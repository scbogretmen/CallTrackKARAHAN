@model CallType
@{
    ViewData["Title"] = "Çağrı Türü Düzenle";
}
<div class="admin-header px-4">
    <h1><i class="bi bi-pencil-square me-2" aria-hidden="true"></i>Çağrı Türü Düzenle</h1>
    <p class="mb-0 opacity-75 small">Mevcut çağrı türünün adını değiştirin</p>
</div>
<div class="form-card card">
    <div class="card-body">
        <form asp-action="EditCallType" asp-route-id="@Model.Id" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="alert alert-danger py-2" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Name" class="form-label">Çağrı Türü Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <small class="text-muted">Adı değiştirirseniz bu türü kullanan tüm çağrı kayıtları da güncellenir.</small>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-ct-primary">Güncelle</button>
                <a asp-action="CallTypes" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
