@model CallType
@{
    ViewData["Title"] = "Yeni Çağrı Türü";
}
<div class="admin-header px-4">
    <h1><i class="bi bi-tag me-2" aria-hidden="true"></i>Yeni Çağrı Türü</h1>
    <p class="mb-0 opacity-75 small">Yeni çağrı türü tanımlayın</p>
</div>
<div class="form-card card">
    <div class="card-body">
        <form asp-action="CreateCallType" method="post">
            <div asp-validation-summary="All" class="alert alert-danger py-2" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Name" class="form-label">Çağrı Türü Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-ct-primary">Kaydet</button>
                <a asp-action="CallTypes" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
