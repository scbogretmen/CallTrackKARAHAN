<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CallTrack  by KARAHAN</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <nav class="navbar navbar-expand-lg navbar-dark navbar-app">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-telephone-fill me-1" aria-hidden="true"></i>CallTrack
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü aç/kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1" aria-hidden="true"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CallLogs" asp-action="Index">
                                <i class="bi bi-journal-text me-1" aria-hidden="true"></i>Çağrı Kayıtları
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Reports">
                                    <i class="bi bi-graph-up me-1" aria-hidden="true"></i>Raporlar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                    <i class="bi bi-people me-1" aria-hidden="true"></i>Kullanıcılar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="CallTypes">
                                    <i class="bi bi-tags me-1" aria-hidden="true"></i>Çağrı Türleri
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
                                <i class="bi bi-person-circle me-1" aria-hidden="true"></i>@User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value (@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item" aria-label="Çıkış yap"><i class="bi bi-box-arrow-right me-2" aria-hidden="true"></i>Çıkış</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    <main class="container main-content">
        <div class="page-wrapper">
            @RenderBody()
        </div>
    </main>
    <footer class="app-footer text-center py-4 mt-4">
        <a href="/" class="footer-logo-link" aria-label="CallTrack KARAHAN - Ana sayfa">
            <img src="~/images/MehmetKARAHANLogo.png" alt="Mehmet KARAHAN" class="footer-logo" />
        </a>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            var path = window.location.pathname.toLowerCase().replace(/\/$/, '') || '/';
            document.querySelectorAll('.navbar-app .nav-link[href]').forEach(function (a) {
                var href = (a.getAttribute('href') || '').toLowerCase().replace(/\/$/, '') || '/';
                if (href === '/') {
                    if (path === '/' || path === '/home' || path.indexOf('/home/') === 0) a.classList.add('active');
                } else if (path.indexOf(href) === 0) a.classList.add('active');
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
