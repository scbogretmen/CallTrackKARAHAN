@model CallLog
@{
    ViewData["Title"] = "Çağrı Düzenle";
}
<div class="form-card card mb-4">
    <div class="card-body">
        <h1 class="form-section-title mb-1">Çağrı Düzenle</h1>
        <p class="page-subtitle mb-4">Kayıt bilgilerini ve güncellemeleri düzenleyin.</p>
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedByUserId" />
            <input type="hidden" asp-for="CreatedAt" />
            <div asp-validation-summary="All" class="alert alert-danger py-2" role="alert"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SiraNo" class="form-label"></label>
                    <input asp-for="SiraNo" class="form-control" type="number" />
                    <span asp-validation-for="SiraNo" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CagriNo" class="form-label"></label>
                    <input asp-for="CagriNo" class="form-control" />
                    <span asp-validation-for="CagriNo" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CagriTuru" class="form-label"></label>
                    <select asp-for="CagriTuru" class="form-select" aria-label="Çağrı türü">
                        @foreach (var ct in ViewBag.CallTypes as IEnumerable<CallType> ?? Enumerable.Empty<CallType>())
                        {
                            <option value="@ct.Name">@ct.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CagriTuru" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TeknisyenAdi" class="form-label"></label>
                    <input asp-for="TeknisyenAdi" class="form-control" />
                    <span asp-validation-for="TeknisyenAdi" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Tarih" class="form-label"></label>
                    <input asp-for="Tarih" class="form-control" type="date" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MevcutCagriSaat" class="form-label"></label>
                    <input asp-for="MevcutCagriSaat" class="form-control" type="time" />
                    <span asp-validation-for="MevcutCagriSaat" class="text-danger"></span>
                </div>
            </div>
            <hr class="my-4" />
            <h5 class="form-section-title mb-2">Yeni Güncelleme Ekle (Opsiyonel)</h5>
            <p class="text-muted small mb-3">Güncelleme eklemek istiyorsanız aşağıdaki üç alanı da doldurun. Birden fazla güncelleme eklenebilir.</p>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="GuncellenenTarih" class="form-label"></label>
                    <input asp-for="GuncellenenTarih" class="form-control" type="date" />
                    <span asp-validation-for="GuncellenenTarih" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="GuncellenenCagriSaat" class="form-label"></label>
                    <input asp-for="GuncellenenCagriSaat" class="form-control" type="time" />
                    <span asp-validation-for="GuncellenenCagriSaat" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-4">
                <label asp-for="GuncellemeNedeni" class="form-label"></label>
                <textarea asp-for="GuncellemeNedeni" class="form-control" rows="2"></textarea>
                <span asp-validation-for="GuncellemeNedeni" class="text-danger"></span>
            </div>
            @{
                var updates = ViewBag.Updates as IEnumerable<CallLogUpdate> ?? Model.Updates ?? Enumerable.Empty<CallLogUpdate>();
            }
            @if (updates.Any())
            {
                <hr class="my-4" />
                <h5 class="form-section-title mb-3">Geçmiş Güncellemeler</h5>
                <div class="table-responsive mb-4">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light"><tr><th>Tarih</th><th>Saat</th><th>Neden</th></tr></thead>
                        <tbody>
                            @foreach (var u in updates)
                            {
                                <tr>
                                    <td>@u.GuncellenenTarih.ToString("dd.MM.yyyy")</td>
                                    <td>@u.GuncellenenCagriSaat</td>
                                    <td>@u.GuncellemeNedeni</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            <div class="form-actions">
                <button type="submit" class="btn btn-ct-primary">Güncelle</button>
                <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
