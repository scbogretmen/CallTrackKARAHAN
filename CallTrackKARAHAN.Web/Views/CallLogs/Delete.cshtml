@model CallLog
@{
    ViewData["Title"] = "Kayıt Sil";
}
<h1 class="page-title text-danger">Kayıt Sil</h1>
<div class="alert alert-warning mb-4" role="alert">
    Bu kaydı silmek istediğinizden emin misiniz?
</div>
<div class="detail-list mb-4">
    <dl class="row mb-0">
        <dt class="col-sm-3">Sıra No</dt>
        <dd class="col-sm-9">@Model.SiraNo</dd>
        <dt class="col-sm-3">Çağrı No</dt>
        <dd class="col-sm-9">@Model.CagriNo</dd>
        <dt class="col-sm-3">Teknisyen</dt>
        <dd class="col-sm-9">@Model.TeknisyenAdi</dd>
        <dt class="col-sm-3">Tarih</dt>
        <dd class="col-sm-9">@Model.Tarih.ToString("dd.MM.yyyy")</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="form-actions border-0 pt-0">
        <button type="submit" class="btn btn-danger">Evet, Sil</button>
        <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
    </div>
</form>
