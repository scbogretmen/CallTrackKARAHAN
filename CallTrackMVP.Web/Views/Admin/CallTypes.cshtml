@model IEnumerable<CallType>
@{
    ViewData["Title"] = "Çağrı Türleri";
}
<div class="admin-header px-4">
    <h1><i class="bi bi-tags me-2" aria-hidden="true"></i>Çağrı Türleri</h1>
    <p class="mb-0 opacity-75 small">Çağrı kayıtlarında kullanılan türleri yönetin</p>
</div>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}
<div class="d-flex flex-wrap gap-2 mb-4">
    <a asp-action="CreateCallType" class="btn btn-ct-primary" aria-label="Yeni çağrı türü">
        <i class="bi bi-plus-lg me-1" aria-hidden="true"></i>Yeni Çağrı Türü
    </a>
    <a asp-action="Users" class="btn btn-outline-secondary">Kullanıcılar</a>
    <a asp-action="Reports" class="btn btn-outline-secondary">Raporlar</a>
</div>
<div class="admin-card card">
    <div class="table-responsive">
        <table class="table admin-table mb-0">
            <thead>
                <tr>
                    <th>Çağrı Türü</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Name</td>
                        <td><a asp-action="DeleteCallType" asp-route-id="@t.Id" class="btn btn-sm btn-outline-danger" aria-label="Çağrı türünü sil">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@if (!Model.Any())
{
    <div class="empty-state mt-4">
        <p>Henüz çağrı türü tanımlanmamış.</p>
        <a asp-action="CreateCallType" class="btn btn-ct-primary">Yeni Çağrı Türü</a>
    </div>
}
