@model CreateUserViewModel
@{
    ViewData["Title"] = "Yeni Kullanıcı";
}
<div class="admin-header px-4">
    <h1><i class="bi bi-person-plus me-2" aria-hidden="true"></i>Yeni Kullanıcı</h1>
    <p class="mb-0 opacity-75 small">Sisteme yeni kullanıcı ekleyin</p>
</div>
<div class="form-card card">
    <div class="card-body">
        <form asp-action="CreateUser" method="post">
            <div asp-validation-summary="All" class="alert alert-danger py-2" role="alert"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" class="form-select" aria-label="Rol">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-ct-primary">Kaydet</button>
                <a asp-action="Users" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
