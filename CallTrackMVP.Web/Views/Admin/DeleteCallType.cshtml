@model CallType
@{
    ViewData["Title"] = "Çağrı Türü Sil";
    var inUse = ViewBag.InUse == true;
}
<h1 class="page-title text-danger">Çağrı Türü Sil</h1>
@if (inUse)
{
    <div class="alert alert-warning" role="alert">Bu çağrı türü kullanılıyor, silinemez.</div>
}
else
{
    <div class="alert alert-warning" role="alert">"@Model.Name" çağrı türünü silmek istediğinizden emin misiniz?</div>
}
<div class="detail-list mb-4">
    <dl class="row mb-0">
        <dt class="col-sm-2">Çağrı Türü</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
</div>
@if (!inUse)
{
    <form asp-action="DeleteCallType" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="form-actions border-0 pt-0">
            <button type="submit" class="btn btn-danger">Evet, Sil</button>
            <a asp-action="CallTypes" class="btn btn-outline-secondary">İptal</a>
        </div>
    </form>
}
else
{
    <a asp-action="CallTypes" class="btn btn-outline-secondary">Geri Dön</a>
}
