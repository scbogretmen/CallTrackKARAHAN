@{
    ViewData["Title"] = "Ana Sayfa";
}
<h1 class="page-title">Çağrı Takip</h1>
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card dashboard-card">
            <div class="card-body">
                <div class="card-icon bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-calendar-day" aria-hidden="true"></i>
                </div>
                <div class="card-label">Bugünkü Çağrılar</div>
                <p class="card-text display-6 text-primary mb-0">@ViewBag.TodayCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card dashboard-card">
            <div class="card-body">
                <div class="card-icon bg-success bg-opacity-10 text-success">
                    <i class="bi bi-calendar-week" aria-hidden="true"></i>
                </div>
                <div class="card-label">Bu Haftaki Çağrılar</div>
                <p class="card-text display-6 text-success mb-0">@ViewBag.WeekCount</p>
            </div>
        </div>
    </div>
</div>
<div class="d-flex flex-wrap gap-2">
    <a asp-controller="CallLogs" asp-action="Create" class="btn btn-ct-primary btn-lg" aria-label="Yeni çağrı ekle">
        <i class="bi bi-plus-lg me-1" aria-hidden="true"></i>Yeni Çağrı Ekle
    </a>
    <a asp-controller="CallLogs" asp-action="Index" class="btn btn-outline-secondary btn-lg">Tüm Kayıtlar</a>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Admin" asp-action="Reports" class="btn btn-outline-secondary btn-lg">Raporlar</a>
    }
</div>
